{
  "name": "RoxySMS Live OTP Bot",
  "description": "Only LIVE OTP forwarder (RoxySMS) with Telegram",
  "repository": "https://github.com/your-repo/roxysms-bot",
  "keywords": ["telegram", "otp", "sms", "roxysms"],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "CHAT_ID": {
      "description": "Telegram Group/Channel ID",
      "required": true
    },
    "PHPSESSID": {
      "description": "RoxySMS PHP Session ID",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  }
}
